<?xml version="1.0" encoding="UTF-8"?>
<transformationModule version="1.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://www.wldelft.nl/fews" xsi:schemaLocation="http://www.wldelft.nl/fews http://fews.wldelft.nl/schemas/version1.0/transformationModule.xsd">
	<!--Interpolates the gridded data to TSM sites for Hydstra model run-->
	<variable>
		<variableId>ACCESS-R_grid</variableId>
		<timeSeriesSet>
			<moduleInstanceId>ImportForecastACCESSR</moduleInstanceId>
			<valueType>grid</valueType>
			<parameterId>P_fcst</parameterId>
			<locationId>NWP</locationId>
			<timeSeriesType>external forecasting</timeSeriesType>
			<timeStep multiplier="1" unit="hour"/>
			<readWriteMode>read complete forecast</readWriteMode>
		</timeSeriesSet>
	</variable>
	<variable>
		<variableId>ERA5_FloodSites</variableId>
		<timeSeriesSet>
			<moduleInstanceId>ProcessP_ERA_To_FloodSites</moduleInstanceId>
			<valueType>scalar</valueType>
			<parameterId>P_fcst</parameterId>
			<qualifierId>era5</qualifierId>
			<locationSetId>flood.sites_pobs</locationSetId>
			<timeSeriesType>external forecasting</timeSeriesType>
			<timeStep unit="hour" multiplier="1"/>
			<readWriteMode>read complete forecast</readWriteMode>
		</timeSeriesSet>
	</variable>
	<!--START OF THE COMPUTATIONS - Compute average over polygons using cookie cutter method-->
	<transformation id="Interpolate_ERA5_to_TSMSites">
		<interpolationSpatial>
			<inverseDistance>
				<inputVariable>
					<variableId>ACCESS-R_grid</variableId>
				</inputVariable>
				<searchRadius>10000</searchRadius>
				<distanceGeoDatum>UTM55S</distanceGeoDatum>
				<inverseDistancePower>2</inverseDistancePower>
				<numberOfPoints>9</numberOfPoints>
				<outputVariable>
					<variableId>ERA5_FloodSites</variableId>
				</outputVariable>
			</inverseDistance>
		</interpolationSpatial>
	</transformation>
</transformationModule>