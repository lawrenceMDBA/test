<?xml version="1.0" encoding="UTF-8"?>
<timeSeriesExportRun xmlns="http://www.wldelft.nl/fews" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://www.wldelft.nl/fews http://fews.wldelft.nl/schemas/version1.0/timeSeriesExportRun.xsd">
	<!-- Time offset is set to +2 in order to shift the 8:00 am timestamp to 00:00 am
		 data is shifting to next day when loaded into source as 8 am values
	-->
	<!--  This is messy, ideally this should be on the main export ExportToEWSourceRO, bu t it is not possible due to 
		  the way the T0 is handled in that export  and consequently, it cannot see the MDBC forecast as it is in the 
		  future. This is only a temporary solution as a seperate model needs to prepare this data in Source
	-->
	<export>
		<general>
			<exportType>csv</exportType>
			<folder>$EXPORT_FOLDER_TO_EWSRC_RO$</folder>
			<exportFileName>
				<name>ROWS_2_SOURCE_MDBC_FORECAST.csv</name>
			</exportFileName>
			<!-- <idMapId>IdmapROWS2EWSourceRO</idMapId> -->
			<idMapId>IdmapMDBC_OPS2ROWS_Forecast</idMapId>
			<exportMissingValueString></exportMissingValueString>
			<exportTimeZone>
				<timeZoneOffset>+02:00</timeZoneOffset>
			</exportTimeZone>
		</general>	
		<timeSeriesSet>
			<moduleInstanceId>ImportMDBC_OPS</moduleInstanceId>
			<valueType>scalar</valueType>
			<parameterId>Q_fcst</parameterId>
			<!-- <locationSetId>HYDRO_fcst_sites_Q</locationSetId> -->
			<locationId>R_FLOWTOSA</locationId>
			<timeSeriesType>external forecasting</timeSeriesType>
			<timeStep id="8am"/>
			<relativeViewPeriod start="0" end="78" unit="week" startOverrulable="true" endOverrulable="true"/>
			<readWriteMode>read complete forecast</readWriteMode>
		</timeSeriesSet>
	</export>
</timeSeriesExportRun>